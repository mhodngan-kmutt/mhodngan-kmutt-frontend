---
import type { Post } from '../lib/api';
const { post } = Astro.props as { post: Post };
---

<article class="p-6 bg-white rounded shadow hover:shadow-md transition">
  <a href={`/post/${post.slug}`} class="text-2xl font-semibold text-blue-700 hover:underline">
    {post.title}
  </a>
  <p class="text-gray-600 mt-2">{post.excerpt}</p>
</article>
