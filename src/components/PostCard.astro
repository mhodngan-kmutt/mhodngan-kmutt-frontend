---
import type { Post } from '../lib/api';
const { post } = Astro.props as { post: Post };
---

<article class="group relative bg-white rounded-2xl p-8 border-2 border-gray-100 hover:border-primary-300 transition-all duration-300 hover:shadow-xl hover:-translate-y-1">
  <div class="absolute top-0 left-0 w-2 h-full bg-gradient-to-b from-primary-400 to-primary-600 rounded-l-2xl opacity-0 group-hover:opacity-100 transition-opacity"></div>

  <a href={`/post/${post.slug}`} class="block">
    <h3 class="text-2xl font-display font-bold text-gray-900 mb-3 group-hover:text-primary-600 transition-colors">
      {post.title}
    </h3>
    <p class="text-gray-600 leading-relaxed">{post.excerpt}</p>

    <div class="mt-4 flex items-center text-primary-600 font-medium group-hover:gap-2 transition-all">
      <span>Read more</span>
      <svg class="w-5 h-5 transform group-hover:translate-x-1 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3"></path>
      </svg>
    </div>
  </a>
</article>
