---
const { currentLang } = Astro.props;
const otherLang = currentLang === 'th' ? 'en' : 'th';
---

<a
  href={`/${otherLang}`}
  class="inline-flex items-center gap-2 px-5 py-2.5 bg-white border-2 border-primary-500 text-primary-600 font-medium rounded-full hover:bg-primary-500 hover:text-white transition-all duration-300 hover:scale-105"
>
  <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5h12M9 3v2m1.048 9.5A18.022 18.022 0 016.412 9m6.088 9h7M11 21l5-10 5 10M12.751 5C11.783 10.77 8.07 15.61 3 18.129"></path>
  </svg>
  {otherLang.toUpperCase()}
</a>
