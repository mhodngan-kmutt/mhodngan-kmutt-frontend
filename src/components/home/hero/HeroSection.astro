---
const { t } = Astro.props;
---

<section id="hero" class="mx-auto max-w-7xl px-4 py-8">
  <div class="flex flex-col items-center gap-4">
    <h1 class="text-center font-prompt text-2xl font-[800] sm:text-3xl" data-fade-up style="--i:1">
      {t('hero.date')}
    </h1>

    <p class="whitespace-pre-line text-center font-ibm text-base" data-fade-up style="--i:1.5">
      {t('hero.place')}
    </p>
  </div>
</section>
